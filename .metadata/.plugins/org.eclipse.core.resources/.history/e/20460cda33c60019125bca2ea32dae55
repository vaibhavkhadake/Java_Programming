package com.bridgelabzs.functional;

public class PrimeNumber {
	public static boolean palindrom(int number)
	{
		int temp=number;
		int add=0;
		int reminder;
		if(number>7)
		{
			reminder=number%10;
			add=(add*10)+reminder;
			number=number/10;
		}
		System.out.print(" "+add);
		if(temp==add)
			System.out.println("Palindom"+add);
		else
			System.out.println("Not Palindrom");
			
		
		return false;
		
	}
	
	public static void main(String[] args)
	{
		
		int sum=0;
		int[] arr=new int[1000];
		
		for(int i=2;i<1000;i++)
		{
			int flag=0;
			for(int j=2;j<i;j++)
			{
				if(i%j==0)
				{
					flag=1;
				}
			}
			if(flag==0)
			{
				//prime numbers
				System.out.print(i+" ");
				
				if(palindrom(i))
				{
					arr[sum]=i;
					sum++;
				}
				
				
			}
			
		}
		System.out.println("\nTotal count of prime number "+sum);
		
	}

}
